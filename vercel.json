{
  "version": 2,
  "framework": null,
  
  
  "outputDirectory": "public", 

  "functions": {
   
    "api/index.php": { 
      "runtime": "vercel-php@0.7.0"
    }
  },
  
  "routes": [
   
    { "src": "/api/(.*)", "dest": "api/index.php" },
    { "src": "/(.*)", "dest": "api/index.php" }
  ],
  
  "env": {
    "VERCEL_OUTPUT_DIR": "public" 
  }
}